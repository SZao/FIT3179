{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Treemap showing types of accommodation and their quantities.",
    "data": {
      "url": "../data/Type_accomodation.csv"
    },
    "transform": [
      {
        "calculate": "datum['Quantity']",
        "as": "Quantity"
      }
    ],
    "mark": "rect",
    "encoding": {
      "color": {
        "field": "Quantity",
        "type": "quantitative",
        "scale": {"scheme": "blues"}
      },
      "x": {
        "field": "Type of Accommodation",
        "type": "nominal",
        "axis": {"labelAngle": 0}
      },
      "y": {
        "field": "Quantity",
        "type": "quantitative",
        "stack": "zero"
      },
      "tooltip": [
        {"field": "Type of Accommodation", "type": "nominal", "title": "Accommodation Type"},
        {"field": "Quantity", "type": "quantitative", "title": "Quantity"}
      ]
    },
    "config": {
      "view": {"stroke": "transparent"}
    }
  }
  