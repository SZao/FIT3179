{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "GDP Per Capita in 2023 (Categorised into 8 Categories)",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/SZao/FIT3179/master/world_map.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "transform": [
        {
          "calculate": "'Data is not available in ' + datum.properties.NAME",
          "as": "note"
        }
      ],
      "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"},
      "encoding": {"tooltip": {"field": "note"}}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SZao/FIT3179/refs/heads/master/ocean.json",
        "format": {"type": "topojson", "feature": "oceans"}
      },
      "mark": {"type": "geoshape", "fill": "skyblue"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/SZao/FIT3179/master/world_map.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "lightgray"}
    },
    {
      "transform": [
        {
          "lookup": "properties.NAME",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/SZao/FIT3179/refs/heads/master/data/GDP_data.csv"
            },
            "key": "Country Name",
            "fields": ["GDP_Category"]
          }
        },
        {
          "calculate": "datum.GDP_Category === null ? 'No Data' : datum.GDP_Category",
          "as": "GDP_Status"
        }
      ],
      "mark": {"type": "geoshape", "stroke": "white"},
      "encoding": {
        "color": {
          "field": "GDP_Status",
          "type": "nominal",
          "scale": {
            "domain": ["Very Low", "Low", "Lower-Middle", "Middle", "Upper-Middle", "High", "Very High", "Extremely High"],
            "range": ["#FFFFE0","#ADD8E6","#90EE90","#FFDAB9","green","#3CB371","blue","black"]
          },
          "title": "GDP Category"
        },
        "tooltip": [
          {
            "field": "properties.NAME",
            "type": "nominal",
            "title": "Country Name"
          },
          {
            "field": "GDP_Status",
            "type": "nominal",
            "title": "GDP Category"
          }
        ]
      }
    }
  ]
}
